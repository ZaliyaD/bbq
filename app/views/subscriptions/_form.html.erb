<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: subscription} %>

  <% unless user_signed_in? %>
    <div class="mb-2">
      <%= f.label :user_name, t('subscriptions.user_name'), class: 'mb-1' %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="mb-2">
      <%= f.label :user_email, t('subscriptions.user_email'), class: 'mb-1' %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions mb-2">
    <%= f.submit t('buttons.subscribe'), class: 'btn btn-primary' %>
  </div>
<% end %>
