<h2><%= t('devise.passwords.change_password') %></h2>

<div class="row">
  <div class="col-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mt-2">
        <%= f.label :password, class: 'mb-1' %>
        <% if @minimum_password_length %>
          <em><%= t('minimum_characters', length: @minimum_password_length) %></em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="mt-2">
        <%= f.label :password_confirmation, class: 'mb-1' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="actions mt-3">
        <%= f.submit t('devise.passwords.change_password'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'devise/shared/links' %>
