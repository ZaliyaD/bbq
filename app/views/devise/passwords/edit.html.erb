<h2>Смена пароля</h2>

<div class="row">
  <div class="col-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mt-2">
        <%= f.label :password, 'Новый пароль' %><br/>
        <% if @minimum_password_length %>
          <em>(минимум <%= @minimum_password_length %> символов</em><br/>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="mt-3">
        <%= f.label :password_confirmation, 'Подтвердите новый пароль' %><br/>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="actions mt-3">
        <%= f.submit 'Изменить пароль', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'devise/shared/links' %>
