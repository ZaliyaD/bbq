<h2><%= t('devise.registrations.edit') %></h2>

<div class="row">
  <div class="col-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class="mt-2">
        <%= f.label :password, class: 'mb-1' %>
        <% if @minimum_password_length %>
          <em><%= t('minimum_characters', length: @minimum_password_length) %></em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="mt-2">
        <%= f.label :password_confirmation, class: 'mb-1' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="mt-2">
        <%= f.label :current_password, class: 'mb-1' %>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
      </div>

      <div class="actions mt-3">
        <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
        <%= link_to t('buttons.back'), :back, class: 'ms-2' %>
      </div>
    <% end %>

    <p><%= button_to t('buttons.delete_account'), registration_path(resource_name),
                     data: { confirm: t('delete_confirmation') }, method: :delete, class: 'btn btn-danger mb-1'%></p>
  </div>
</div>
