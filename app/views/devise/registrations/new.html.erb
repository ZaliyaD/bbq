<h2><%= t('devise.registrations.new') %></h2>

<div class="row">
  <div class="col-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class="mt-2">
      <%= f.label :email, class: 'mb-1' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="mt-2">
        <label class="mb-1" for="user_password">
          <%= resource.class.human_attribute_name(:password) %>
          <% if @minimum_password_length %>
            <em><%= t('minimum_characters', length: @minimum_password_length) %></em>
          <% end %>
        </label>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="mt-2">
        <%= f.label :password_confirmation, class: 'mb-1' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="actions mt-3">
        <%= f.submit t('buttons.log_up'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'devise/shared/links' %>
