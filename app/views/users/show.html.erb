<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user) %>

  <% if @user == current_user %>
    <p class="mt-4">
      <%= link_to t('users.edit'), edit_user_path(@user),
                  class: 'btn btn-primary' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-12">
      <% if @user.events.any? %>
        <h3><%= t('users.organized') %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="mt-4"><%= t('users.no_organized') %></p>
      <% end %>
    </div>
  </div>
</div>
